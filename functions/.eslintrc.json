{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "ignorePatterns": [
    "/lib/**/*",
    "/dist/**/*"
  ],
  "rules": {
    "no-unused-vars": "off",
    "no-undef": "off",
    "no-console": "off"
  }
} 